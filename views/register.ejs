<%- include ('partials/header') %>

<script>
  document.getElementById("switcher").addEventListener("click", function(){
  document.getElementById("second").classList.remove("display")
  document.getElementById("first").classList.add("display")
  alert("hello")
})
</script>
<body>
  


    <main id="wrapper">
      <section id="register">
        <div class="row">
          <div class="col-lg-5 col-md-5 welcome">
            <div>
              <h1>Welcome Back</h1>
              <p style="padding: 20px 0">
                To keep connected with us, please login with your personal info
              </p>
              <button
               class="btn btn-lg btn-outline-light btn-block switch"
              >
                SIGN IN
              </button>

              <img 
              width="200px"
              height="auto"
              style="margin-top: 50px"
              src="/assets/img/softrays 2.png" alt="logo">
            </div>
          </div>
          <div
            class="col-lg-7 col-md-7 create-account"
            style="overflow-y: scroll"
          >
            <form action="/users/register" method="POST">
              <div style="text-align: center">
                <h1>Application Form</h1>
                <p>Kindly fill the form below.</p>
                
              </div>
              <div id="first">
                <h4>Personal Information</h4>
                <div class="form-group icon-group">
                  <i class="icofont-user-alt-3 icon"></i>
                  <input
                    class="form-control"
                    type="text"
                    placeholder="Full Name"
                    name="fullName"
                    value="<%= typeof fullName != 'undefined' ? fullName : '' %>"
                  />
                </div>
                <div class="form-group icon-group">
                  <i class="icofont-envelope icon"></i>
                  <input
                    class="form-control"
                    type="email"
                    placeholder="Email"
                    name="email"
                    value="<%= typeof email != 'undefined' ? email : '' %>"
                  />
                </div>
                <div class="form-group icon-group">
                  <i class="ri-phone-fill icon"></i>
                  <input
                    class="form-control"
                    type="text"
                    placeholder="Phone Number"
                    name="phoneNumber"
                    value="<%= typeof phoneNumber != 'undefined' ? phoneNumber : '' %>"
                  />
                </div>
                <div class="form-group icon-group">
                  <i class="icofont-location-pin icon"></i>
                  <input
                    class="form-control"
                    type="text"
                    placeholder="Contact Address"
                    name="address"
                    value="<%= typeof address != 'undefined' ? address : '' %>"
                  />
                </div>
                <div class="form-group">
                  <label for="" class="label">Gender</label>
                  <select name="gender" class="form-control section" value="<%= typeof gender != 'undefined' ? gender : '' %>">
                    <option>---</option>
                    <option>Male</option>
                    <option>Female</option>
                  </select>
                </div>
  
                <a id="switch" class="btn btn-block btn-lg btn-primary">Next</a>
              </div>

              <div id="second" class="display">
                <h4>Other Information</h4>
                <div class="form-group icon-group">
                  <i class="icofont-flag icon"></i>
                  <input
                    class="form-control"
                    type="text"
                    placeholder="Nationality"
                    name="nationality"
                    value="<%= typeof nationality != 'undefined' ? nationality : '' %>"
                  />
                </div>
                <div class="form-group icon-group">
                  <i class="ri-flag-fill icon"></i>
                  <input
                    class="form-control"
                    type="text"
                    placeholder="State of Origin"
                    name="state"
                    value="<%= typeof state != 'undefined' ? state : '' %>"
                  />
                </div>
                
                <div class="form-group">
                  <label for="" class="label">Qualification</label>
                  <select name="qualification" class="form-control section" value="<%= typeof qualification != 'undefined' ? qualification : '' %>">
                    <option>---</option>
                    <option>SSCE</option>
                    <option>OND</option>
                    <option>BSc</option>
                    <option>Post Graduate</option>
                    <option>Others</option>
                  </select>
                </div>
                
                <div class="form-group">
                  <label for="" class="label">Course</label>
                  <select
                    id="courses"
                    name="course"
                    onchange="changePrice()"
                    class="form-control section"
                    value="<%= typeof course != 'undefined' ? course : '' %>"
                  >
                    <option value="nil">---</option>
                    <option value="excel">
                      Advance Certification in Microsoft Excel
                    </option>
                    <option value="solidworks">Advance Certification in Solid Works</option>
                    <option value="autocad">Advance Certification in AutoCAD (2D&3D)</option>
                    <option value="revit">Advance Certification in Revit (2D&3D)</option>
                    <option value="pythonDS">
                      Advance Certification in Python (Data Science)
                    </option>
                    <option value="java">Advance Certification in Java Programming</option>
                    <option value="cyber">Advance Certification in Cyber Security</option>
                    <option value="aDmarketing">Advance Certification in Digital Marketing</option>
                    <option value="itc">
                      Certification in Information Technology and Computing
                    </option>
                    <option value="adobe">Certification in Adobe Photoshop</option>
                    <option value="engineering">
                      Computer Systems Engineering A+ and Networking N+ (CSE)
                      &nbsp; &nbsp;
                    </option>
                    <option value="coreldraw">
                      Certification in CorelDRAW and Digital Printing
                    </option>
                    <option value="python">Certificate in Python Programming</option>
                    <option value="dmarketing">Certificate in Digital Marketing</option>
                    <option value="motion">Certificate in Motion Graphics</option>
                    <option value="ccna">CCNA (CISCO CERTIFICATION)</option>
                    <option value="ccnp">CCNP (CISCO CERTIFICATION)</option>
                    <option value="spss">Data Analysis Using SPSS</option>
                    <option value="mini">Mini Importation Training</option>
                    <option value="mobile">Mobile App Development</option>
                    <option value="ui/ux">User Interface/User Experience (UI/UX) Desgin</option>
                    <option value="frontend">Web Design (Front End)</option>
                    <option value="fullstack">Web Development (Full Stack)</option>
                    <option value="siwes">
                      Student Industrial Work Experience Scheme (SIWES)
                    </option>
                  </select>
  
                  <div class="form-group icon-group">
                    <label for="">Price</label>
                    <input
                      id="price"
                      type="text"
                      style="margin: 20 0 0 0; padding-left: 10px"
                      class="form-control price"
                      name="price"
                      value="0"
                      readonly
                    />
                  </div>
                </div>

                <a id="back-switch" class="btn btn-block btn-lg btn-outline-primary">Back</a>
                <a id="switch2" class="btn btn-block btn-lg btn-primary">Next</a>
  
                
              </div>

              <div id="third" class="display">
                <h2>Create your password</h2>
                        <div class="form-group icon-group">
                            <i class="icofont-lock icon"></i>
                            <input id="password" 
                            type="password" 
                            class="form-control" 
                            name="password"
                            placeholder="Password"
                            value="<%= typeof password != 'undefined' ? password : '' %>">
                            <i id="togglePassword" class="ri-eye-fill icon2"></i>
                            <small>We will keep your password secret and out of the reach of hackers</small> 
                        </div>
                        <div class="form-group icon-group">
                            <i class="icofont-lock icon"></i>
                            <input id="anotherPassword" type="password" 
                            class="form-control"
                            name="password2"
                                placeholder="Confirm Password"
                                value="<%= typeof password2 != 'undefined' ? password2 : '' %>">
                            <i id="anotherTogglePassword" class="ri-eye-fill icon2"></i>
                        </div>
                        <a id="back-switch2" class="btn btn-block btn-outline-primary btn-lg"> Back</a>

                        <button
                  name="submit"
                  class="btn btn-block btn-primary btn-lg"
                  type="submit"
                >
                  Continue
                </button>
              </div>
              
             
              <!-- <div class="space"></div> -->
            </form>

           
          </div>
        </div>
      </section>
    </main>

    <script src="/assets/vendor/jquery/jquery.min.js"></script>
    <script src="/assets/js/app.js"></script>
</body>

</html>
 
